/*填充整个窗口*/
fill-window() {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

/*填充父元素*/
fill-parent() {
  width: 100%;
  height: 100%;
}

// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

