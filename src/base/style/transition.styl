/*从上滑下的显示动画：to-bottom*/
.to-bottom-enter-active, .to-bottom-leave-active {
  transition: all .4s;
  transform-origin top
  transform scaleY(1);
}

.to-bottom-enter, .to-bottom-leave-to {
  transform scaleY(0);
}

/*从右滑左的显示动画:to-left*/
.to-left-enter-active, to-left-leave-active {
  transition: all .4s;
  transform translate3d(0, 0, 0);
}

.to-left-enter, .to-left-leave-to {
  transition: all .4s;
  transform translate3d(100%, 0, 0);
}
